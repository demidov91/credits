@model List<Coffee.Entities.CreditRequest>

@{
    Layout = "~/Views/Shared/_BankWorkerLayout.cshtml";
    ViewBag.Title = "UnapprovedList";
}


@section undecidedActive{active}

<h2>UnapprovedList</h2>

@if (Model.Count == 0)
{ 
<div><i>There are no unapproved requests yet.</i></div>
}
else
{

<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Line</td>
            <td>Amount</td>
            <td>Details</td>
        </tr>
    </thead>
    <tbody>
@foreach (Coffee.Entities.CreditRequest req in Model)
{
        <tr>
            <td>@req.PassportInfo.FullName</td>
            <td>@req.CreditLine.Name</td>
            <td>@req.Amount</td>
            <td>@Html.ActionLink("Details", "RequestDetail", new RouteValueDictionary() { { "reqId", req.Id } })</td>
        </tr>
}
    </tbody>
</table>
}
